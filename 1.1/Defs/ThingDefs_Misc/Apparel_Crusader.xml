<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Crusader Armor-->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Apparel_Crusader</defName>
    <label>Crusader Armor</label>
    <description>The armor worn by Crusaders.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Apparel_Crusader/CrusaderArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>4</Mass>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Steel>120</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Apparel_Crusader/CrusaderArmour</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>OldCrusader</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
